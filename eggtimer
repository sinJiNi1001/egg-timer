<div class="box">
  <div class="egg-icon">ðŸ¥š</div>
  <h2>Egg Timer</h2>

  <div class="options">
    <button onclick="setTime(300)">Soft â€” 5 min</button>
    <button onclick="setTime(480)">Medium â€” 8 min</button>
    <button onclick="setTime(600)">Hard â€” 10 min</button>
  </div>

  <div id="timerDisplay">00:00</div>

  <div class="controls">
    <button onclick="startTimer()">Start</button>
    <button onclick="stopTimer()">Stop</button>
    <button onclick="resetTimer()">Reset</button>
  </div>
</div>

<script>
  let timeLeft = 0;
  let countdown = null;

  function setTime(sec) {
    timeLeft = sec;
    display(timeLeft);
  }

  function startTimer() {
    if (countdown) return;
    countdown = setInterval(() => {
      if (timeLeft <= 0) {
        clearInterval(countdown);
        countdown = null;
        alert("Egg ready!");
        return;
      }
      timeLeft--;
      display(timeLeft);
    }, 1000);
  }

  function stopTimer() {
    clearInterval(countdown);
    countdown = null;
  }

  function resetTimer() {
    clearInterval(countdown);
    countdown = null;
    timeLeft = 0;
    display(timeLeft);
  }

  function display(sec) {
    let m = Math.floor(sec / 60);
    let s = sec % 60;
    document.getElementById("timerDisplay").innerText = `${String(m).padStart(2,'0')}:${String(s).padStart(2,'0')}`;
  }
</script>

